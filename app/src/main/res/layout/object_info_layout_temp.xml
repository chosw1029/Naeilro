<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="nextus.naeilro.viewmodel.ObjectInfoVMTemp"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:background="@color/background">
        <LinearLayout
            android:background="#ffffff"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <View
                    android:background="@color/colorAccent"
                    android:layout_marginRight="8dp"
                    android:layout_width="2dp"
                    android:layout_height="30dp"/>
                <LinearLayout
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="4dp"
                        android:text="@{viewModel.locationName}"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <TextView
                    android:text="@{viewModel.locationValueString}"
                    android:textSize="10sp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:id="@+id/rating_value"
                    android:rating="@{viewModel.locationValueDouble}"
                    android:max="5"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"/>
                <TextView
                    android:text="@{viewModel.locationRcountString}"
                    android:textSize="11sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/object_des"
                android:layout_marginBottom="16dp"
                android:lineSpacingMultiplier="1.3"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/mapViewCon"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:fontAwesomeIcon="fa_map_marker"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@{viewModel.locationAddress}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:fontAwesomeIcon="fa_phone"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@{viewModel.locationPhone}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:fontAwesomeIcon="fa_internet_explorer"/>
                <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:id="@+id/object_site"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">
                <com.beardedhen.androidbootstrap.BootstrapLabel
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bootstrapBrand="warning"
                    app:fontAwesomeIcon="fa_star"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:text="리뷰"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/notReview"
                    android:text="리뷰가 없습니다."
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/reviewRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/reviewButton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="리뷰 쓰기"
                    style="?android:attr/buttonStyle"/>

                <Button
                    android:id="@+id/moreReview"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="리뷰 더보기"
                    style="?android:attr/buttonStyle"/>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">
                <com.beardedhen.androidbootstrap.BootstrapLabel
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bootstrapBrand="warning"
                    app:fontAwesomeIcon="fa_tags"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:text="관련 블로그"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/blogRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</layout>
